<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center">

        <TextView
            android:id="@+id/txt_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Details"
            android:textColor="@color/my_blue"
            android:fontFamily="@font/bon"

            android:textSize="18sp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_choose"
            android:text="Either upload pdf of start writring now."
            android:textColor="@color/white"
            android:textSize="12sp"></TextView>
    </RelativeLayout>

    <androidx.legacy.widget.Space
        android:layout_width="match_parent"
        android:layout_height="35dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/btnchoose"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="6dp"
            android:background="#E0E0E0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email Address"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Field Value -->
                <TextView
                    android:id="@+id/et_email_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="example@email.com"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />

                <!-- Mobile Number -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mobile Number"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Field Value -->
                <TextView
                    android:id="@+id/et_mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="123-456-7890"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />

                <!-- Landline Number -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Landline Number"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Field Value -->
                <TextView
                    android:id="@+id/et_landline_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="987-654-3210"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />

                <!-- Residence Number -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Residence Number"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Field Value -->
                <TextView
                    android:id="@+id/et_residence_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="876-543-2109"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />

                <!-- Address Line 1 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address Line 1"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Field Value -->
                <TextView
                    android:id="@+id/et_address_line1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="123 Main Street"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />

                <!-- Address Line 2 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address Line 2"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Field Value -->
                <TextView
                    android:id="@+id/et_address_line2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Apt 4B"
                    android:textSize="16sp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <Button android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginBottom="30dp"
            android:text="@string/register"
            android:id="@+id/btn_register"
            android:background="@drawable/btn_custom"
            android:layout_marginRight="20dp"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"/>
    </LinearLayout>
</LinearLayout>
